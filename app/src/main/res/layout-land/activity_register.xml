<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:id="@+id/registerView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380sp"
        android:gravity="center|clip_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/username_en"
            android:textAlignment="textStart"
            android:textSize="@dimen/titleTextSize"
            android:translationX="@dimen/titleLeftMargin" />

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="@dimen/registration_InputField"
            android:layout_height="40sp"
            android:hint="@string/username_en"
            android:inputType="text"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="E-MAIL"
            android:textSize="@dimen/titleTextSize"
            android:translationX="@dimen/titleLeftMargin" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="@dimen/registration_InputField"
            android:layout_height="40sp"
            android:hint="@string/eMail"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/password_en"
            android:textSize="@dimen/titleTextSize"
            android:translationX="@dimen/titleLeftMargin" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="@dimen/registration_InputField"
            android:layout_height="40sp"
            android:hint="@string/password_en"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textViewPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/passwordAgain_en"
            android:textSize="@dimen/titleTextSize"
            android:translationX="@dimen/titleLeftMargin" />

        <EditText
            android:id="@+id/editTextPasswordAgain"
            android:layout_width="@dimen/registration_InputField"
            android:layout_height="40sp"
            android:hint="@string/password_en"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/termsCheckBox"
            android:layout_width="200sp"
            android:layout_height="45sp"
            android:text="@string/termsOfUseCheckboxText" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="180sp"
            android:layout_height="40sp"
            android:text="@string/register_en"
            android:visibility="visible"
            android:onClick="register"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>